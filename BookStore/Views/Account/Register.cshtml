@using BookStore.Models.ViewModels
@model RegisterViewModel

<div class="register-card card p-4">
    <div class="card-body">
        <div class="text-center mb-4">
            <h4 class="brand mb-1">BookStore</h4>
            <p class="text-muted mb-0">Tạo tài khoản mới</p>
        </div>

        <form id="registerForm" asp-action="Register" asp-controller="Account" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" required minlength="6" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-success">Đăng ký</button>
            </div>

            <div class="text-center">
                <small class="text-muted">
                    Đã có tài khoản? <a asp-controller="Account" asp-action="Login">Đăng nhập</a>
                </small>
            </div>
        </form>
    </div>
</div>