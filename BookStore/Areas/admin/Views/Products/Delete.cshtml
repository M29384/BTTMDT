@model BookStore.Models.ProductModel

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<h2>@ViewData["Title"]</h2>

<h4>Bạn có muốn xóa sản phẩm?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Tên sản phẩm</dt>
        <dd class="col-sm-10">@Model.ProductName</dd>

        <dt class="col-sm-2">Tác giả</dt>
        <dd class="col-sm-10">@Model.TenTg</dd>

        <dt class="col-sm-2">Nhà xuất bản</dt>
        <dd class="col-sm-10">@Model.NhaXuatBan</dd>

        <dt class="col-sm-2">Giá</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Số lượng</dt>
        <dd class="col-sm-10">@Model.Soluong</dd>

        <dt class="col-sm-2">Thể loại</dt>
        <dd class="col-sm-10">@Model.Category?.CategoryName</dd>

        <dt class="col-sm-2">Hình ảnh</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="~/assets/images/@Model.ImageUrl" alt="Product image" style="max-width:200px;max-height:200px;" />
            }
            else
            {
                <span class="text-muted">No image</span>
            }
        </dd>

        <dt class="col-sm-2">Mô tả sản phẩm</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ProductId" />
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>