<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin - BookStore</title>

    <!-- Bootstrap 5 CSS -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            min-height: 100vh;
        }

        .sidebar {
            width: 240px;
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            background: #343a40;
            color: #fff;
            padding-top: 1rem;
        }

            .sidebar a {
                color: #adb5bd;
                text-decoration: none;
                display: block;
                padding: .5rem 1rem;
                border-radius: 4px;
            }

                .sidebar a:hover, .sidebar a.active {
                    background: #495057;
                    color: #fff;
                }

        .content {
            margin-left: 240px;
            padding: 2rem;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h4 class="text-center mb-4">Admin Panel</h4>
        <a asp-controller="Products" asp-action="Index"><i class="bi bi-book me-2"></i>Sách</a>
        <a asp-controller="Order" asp-action="Index"><i class="bi bi-bag-check me-2"></i>Đơn hàng</a>
    </div>

    <!-- Content -->
    <div class="content">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4 shadow-sm rounded">
            <div class="container-fluid">
                <span class="navbar-brand">BookStore Admin</span>
                <div class="d-flex">
                    <a href="/" class="btn btn-outline-primary btn-sm me-2">Trang chủ</a>
                </div>
            </div>
        </nav>
        @RenderBody()

    <!-- Bootstrap JS -->
    <script src="~/assets/js/bootstrap.min.js"></script>
</body>
</html>
